{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "lib": ["esnext"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "types": [
      "vitest/globals", 
      "node"
    ],
  },
  "exclude": [
    "dist",
    "**/dist/*",
    "node_modules",
    "**/node_modules/*"
  ]
}
